<div class="flex-row">
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= type %> alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= message %>
    </div>
  <% end %>
</div>
